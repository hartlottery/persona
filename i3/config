bindsym $mod+w exec --no-startup-id $HOME/.emacs.d/vendor/i3-mode/i3-call focus up "#'windmove-up"
bindsym $mod+s exec --no-startup-id $HOME/.emacs.d/vendor/i3-mode/i3-call focus down "#'windmove-down"

# move focused window
